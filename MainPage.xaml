<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Spinning_Wheel.MainPage">

    <ScrollView>
    <VerticalStackLayout Spacing="50">
        
        <GraphicsView
        x:Name="Wheel"
        WidthRequest="1000"
        HeightRequest="600" />

        <Button
            x:Name="AddButton"
            Text="Random Sectors"
            WidthRequest="500"
            HeightRequest="150"
            FontSize="Header"
            Clicked="RandomClicked"
            />
        
        <Button
            x:Name="RemoveButton"
            Text="Random Rotation"
            WidthRequest="500"
            HeightRequest="150"
            FontSize="Header"
            Clicked="RotateClicked"
            />

    </VerticalStackLayout>
    </ScrollView>

</ContentPage>
